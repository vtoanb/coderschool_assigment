<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Toan's Blog</h1>
  <h3>Summary of My Projects</h3>


  <div class="row">
    <div class="col-sm-8 col-xs-12">
      <% @articles.each do |article| %>
        <div class="card">
          <div class="card-block">
            <div class="card-title">
              <h3><%= article.title %></h3>
            </div>
            <div class="card-body">
              <%= @markdown.render(article.body).html_safe %>
            </div>
            <div class="card-footer" style="margin-left:-1.25rem;margin-right:-1.25rem;margin-bottom:-1.25rem;background:white">
              <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-default pull-lg-right pull-right' %>
              <%= link_to 'Remove', article, class: 'btn btn-danger pull-lg-right pull-right', method: :delete, data: {confirm: "Remove this article?"} %>
            </div>
          </div>
        </div>
      <% end %>      

  <br>
  <%= link_to 'New Article', new_article_path %>
    </div>




</div>